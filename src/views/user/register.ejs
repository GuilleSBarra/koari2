<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head')%> 
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="../css/user/register.css">
    <title>Register</title>
</head>
<%- include('../partials/header')%>
    <div class="formulario-login">
        <form action="./register" method="POST" enctype="multipart/form-data" class="login-form">
            <h3 class="enter">Crear cuenta</h3>
            <div>
                <input type="email" name="email" id="email" value="<%= locals.oldData ? oldData.email : null %>" placeholder="Correo electrÃ³nico">
                <% if (locals.errors && errors.email) { %>
                    <div class="warning-text">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= errors.email.msg %>
                    </div>
                    <% } %>
            </div>
            <div>
                <input type="text" name="nombre" value="<%= locals.oldData ? oldData.nombre : null %>" placeholder="Nombre">
                <div id="errors-first-name" class="warning-text"></div>
                    <% if (locals.errors && errors.nombre) { %>
                        <div id="validation1" class="warning-text">
                            <i class="fas fa-exclamation-circle"></i>
                            <%= errors.nombre.msg %>
                        </div>
                    <% } %>
            </div>
            <div>
                <input type="text" name="apellido" id="apellido" value="<%= locals.oldData ? oldData.apellido : null %>" placeholder="Apellido">
                <% if (locals.errors && errors.apellido) { %>
                    <div class="warning-text">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= errors.apellido.msg %>
                    </div>
                    <% } %>
            </div>
            <div>
                <input type="password" name="password" id="password" placeholder="Password">
                <% if (locals.errors && errors.password) { %>
                    <div class="warning-text">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= errors.password.msg %>
                    </div>
                    <% } %>
            </div>
            <div>
                <input type="number" name="dni" id="dni" value="<%= locals.oldData ? oldData.dni : null %>" placeholder="DNI">
                <% if (locals.errors && errors.dni) { %>
                    <div class="warning-text">
                        <i class="fas fa-exclamation-circle"></i>
                        <%= errors.dni.msg %>
                    </div>
                    <% } %>
            </div>
            <div class="imagen-class">
                <label for="imagen" class="text01">Ingresa tu foto:</label>
                <input type="file" name="avatar" accept=".jpg,.png"
                    class="form-control" value="<%= locals.errors && errors.avatar ? 'is-invalid' : null %>" multiple>
                    <% if (locals.errors && errors.avatar) { %>
                        <div class="warning-text1">
                            <i class="fas fa-exclamation-circle"></i>
                            <%= errors.avatar.msg %>
                        </div>
                        <% } %>
            </div>
            <div class="botonera">
                <button type="submit">Crear Cuenta</button>
                <button type="reset">Borrar</button>
            </div>
        </form>
    </div>
</html>